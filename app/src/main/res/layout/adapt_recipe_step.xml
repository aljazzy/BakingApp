<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapt_rec_step_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    app:contentPadding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/adapt_rec_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/adapter_step_image_recipe"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_logo"/>
        <TextView
            android:id="@+id/adapt_rec_step_title"
            style="?android:textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="@string/adapter_step_examp_title"/>
    </LinearLayout>

</android.support.v7.widget.CardView>